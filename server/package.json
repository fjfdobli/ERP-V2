{
    "name": "printingpresserpserver",
    "version": "1.0.0",
    "description": "Backend API for Printing Press ERP System",
    "main": "dist/server.js",
    "scripts": {
        "start": "concurrently \"npm run server\" \"npm run client\"",
        "dev": "nodemon --exec ts-node src/new-server.ts",
        "build": "tsc",
        "test": "echo \"Error: no test specified\" && exit 1",
        "server": "cd server && npm run dev",
        "client": "cd client && npm start"
    },
    "keywords": [
        "erp",
        "printing",
        "supabase",
        "express",
        "typescript"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@supabase/supabase-js": "^2.49.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^20.17.25",
        "concurrently": "^9.1.2",
        "nodemon": "^3.1.9",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.2"
    }
}
